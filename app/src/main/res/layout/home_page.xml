<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="21.3">

        <Space
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.9" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            app:srcCompat="@mipmap/sign"
            android:id="@+id/sign"
            android:scaleType="fitXY"
            android:layout_weight="31.5" />

        <Space
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.9" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="31.5">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="10.4"
                app:srcCompat="@mipmap/welfare"
                android:scaleType="fitXY"
                android:id="@+id/welfare" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"/>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                app:srcCompat="@mipmap/action"
                android:layout_weight="10.4"
                android:scaleType="fitXY"
                android:id="@+id/action" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.9" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            app:srcCompat="@mipmap/red_packet"
            android:scaleType="fitXY"
            android:id="@+id/red_packet"
            android:layout_weight="31.5" />

    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/viewPager"
        android:layout_weight="43.3">

    </android.support.v4.view.ViewPager>
    <Space
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2.8"/>

</LinearLayout>